<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td><%= game.description %></td>
        <td><%= link_to 'Show', game,  class: "btn btn-primary outline" %></td>
        <td><%= link_to 'Edit', edit_game_path(game),  class: "btn btn-warning outline" %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' },  class: "btn btn-danger outline" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path,  class: "btn btn-success outline" %>
